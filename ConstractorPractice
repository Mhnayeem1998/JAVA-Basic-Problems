package com.mycompany.lab2for45;
    
public  class Lab2for45{
    
    public static void main(String[] args){
        
       Student s = new Student("Nayeem",1);
       System.out.println("Your Name : " + s.name + " " + ".Your Name : " +  s.id);
    }
    
    
    
}
class Student{
        String name ;
        int id;
        
        Student(String s,int i){
            name = s ; id = i;
        }


}



